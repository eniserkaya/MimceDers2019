<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ana_ekran_gradient"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/kullanici_adi_et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Kullanıcı Adı"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/profil_img_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/kullanici_adi_et_id"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:src="@drawable/profile"
         />

    <EditText
        android:id="@+id/kullanici_pw_et_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kullanici_adi_et_id"
        android:layout_centerHorizontal="true"
        android:ems="10"

        android:gravity="center"
        android:hint="Parola"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kullanici_pw_et_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Giriş Yap" />

    <ProgressBar
        android:layout_below="@id/login_btn_id"
        android:id="@+id/progressBar"
        android:layout_marginTop="@dimen/button_margin"
        style="?android:attr/progressBarStyle"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
         />
</RelativeLayout>